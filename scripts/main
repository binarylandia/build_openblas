#!/usr/bin/env bash

set -euxo pipefail

NAME="openblas"
GIT_REPO_URL="https://github.com/OpenMathLib/OpenBLAS"
VERSION="0.3.28"
BRANCH="v${VERSION}"

BUILD_DIR=".build"
INSTALL_DIR="/opt/${NAME}"
OUT_DIR=".out"

NICE="nice -19 ionice -c2 -n5"
JOBS="${JOBS:=$(($(nproc --all) + 2))}"

build_time="$(date '+%Y%m%d%H%M%S')"

function abspath() {
  readlink -m "$1"
}

function log() {
  tee -a "${1}" | stdbuf -oL grep --color=always -iE "error|fail|cannot|can't|unable|"
}

function package() {
  local input_dir="${1}"
  local output_tarball="${2}"

  ${NICE} find "${input_dir}" -printf "%P\n" \
    | ${NICE} tar --no-recursion -cf - -C "${input_dir}" --files-from=- \
    | ${NICE} xz -T0 -k > "${output_tarball}"
}


build_dir="$(abspath ${BUILD_DIR})"
mkdir -p "${build_dir}"
outdir="$(abspath "${OUT_DIR}")"
mkdir -p "${outdir}"

pushd "$build_dir" >/dev/null
  src_dir="${NAME}-${VERSION}"

  if [ ! -d "${src_dir}" ]; then
    git clone --recursive --depth=1 -b "${BRANCH}" "${GIT_REPO_URL}" "${src_dir}"
  fi

  pushd "${src_dir}" >/dev/null

    export CROSS="1"
    export BINARY="64"
    export TARGET="HASWELL"
    export DYNAMIC_ARCH="1"
    export FIXED_LIBNAME="1"
    export CC="/opt/osxcross/bin/x86_64-apple-darwin20.2-gcc"
    export FC="/opt/osxcross/bin/x86_64-apple-darwin20.2-gfortran"
    export LD="/opt/osxcross/bin/x86_64-apple-darwin20.2-ld"
    export HOSTCC="clang"

    export BUILD_SHARED_LIBS=0
    export BUILD_TESTS=0

    ${NICE} make -j"${JOBS}" 2>&1 | log "build.log"

    ${NICE} make install PREFIX="${INSTALL_DIR}" 2>&1 | log "build.log"

    package "${INSTALL_DIR}" "${outdir}/${NAME}-${VERSION}-static-${build_time}.tar.xz"
  popd >/dev/null
popd >/dev/null


